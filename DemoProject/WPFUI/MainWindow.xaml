<Window x:Class="WPFUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800" FontFamily="Gill Sans Ultra Bold">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="1" Grid.Row="1" FontSize="28" ><Run Text="{Binding Path=recipe}"/></TextBlock>

        <Image x:Name="MicroWaveImage" Grid.ColumnSpan="1"  Grid.Column="1" Grid.Row="2" Source="C:\Users\Reggie\Desktop\school\Programmeren\C#\Les 2\microwave_opened.png"/>
        <Button Content="Close" Grid.Column="4" Grid.Row="1"  Click="CloseButton_Click" />
        <Button Content="+1" Grid.Column="3" Grid.Row="1"  Click="SubmitButton_Click" />
        <Button Content="Start" Grid.Column="2" Grid.Row="1"  Click="StartButton_Click" />


        <TextBlock x:Name="timer" Grid.Column="5" Grid.Row="1" FontSize="12" Text="0:00" />

        <ComboBox x:Name="Combo1"  Grid.Column="1" Grid.Row="4"  Width="120" Margin="0,10,0,0" SelectedIndex="0">

        </ComboBox>
    </Grid>
</Window>
