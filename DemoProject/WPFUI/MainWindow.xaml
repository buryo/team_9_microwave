<Window x:Class="WPFUI.MainWindow"
        x:Name="Derp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" FontFamily="Gill Sans Ultra Bold">

    <Grid>

        <!--Grid background-->
        <Grid.Background>
            <ImageBrush x:Name="BackgroundImage" ImageSource="/WPFUI;component/Images/Microwave/micro-dicht-aan.jpg"/>
        </Grid.Background>
        
        <!-- Grid for numbers -->
        <Grid Name="Numbers" Height="88" VerticalAlignment="Bottom" Margin="0,0,345,215" HorizontalAlignment="Right" Width="85">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="23*"/>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="22*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="9"/>
                <RowDefinition Height="19"/>
                <RowDefinition Height="19"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="19"/>
            </Grid.RowDefinitions>
        </Grid>

        <!--Grid for start and stop-->
        <Grid Name="StartStop" Margin="574,359,356,193">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <Button Name="StartButton" Content="Start" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="29" Height="17" Opacity="0" Click="StartButton_Click_1"/>
            <Button Name="StopButton" Content="Stop" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="31" Height="17" Grid.ColumnSpan="2" Opacity="0"/>
        </Grid>

        <!--Grid for timer-->
        <Grid Name="Timer" Margin="574,242,358,309"/>

        <!--Grid for ingredients-->
        <Grid Name="Ingredients" HorizontalAlignment="Right" Width="237" Margin="0,10,32,161"/>

        <!--Grid for sticky note-->
        <Grid Name="StickyNote" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="49*"/>
                <ColumnDefinition Width="130*"/>
                <ColumnDefinition Width="813*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="129"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="54"/>
            </Grid.RowDefinitions>
        </Grid>

        <!--Grid for microwave window-->
        <Grid Name="MicrowaveWindow" Grid.RowSpan="3" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="265*"/>
                <ColumnDefinition Width="255*"/>
                <ColumnDefinition Width="472*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="244"/>
                <RowDefinition Height="133"/>
                <RowDefinition Height="191"/>
            </Grid.RowDefinitions>
        </Grid>

    </Grid>
</Window>
                



       
                







       



        




